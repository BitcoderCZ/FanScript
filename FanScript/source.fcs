on Play
{
    global array<float> arr = [46, -4, 156]

    avrg(3, out float avrg)

    inspect(avrg)

    arr = [145, 12, 1654, -145, 144, 12, -785]

    avrg(7, out avrg)

    inspect(avrg)
}

func avrg(float arrLen, out float avrgRes)
{
    float total = 0

    on Loop(0, arrLen, out inline float index)
    {
        total += arr.get(index)
    }

    avrgRes = total / arrLen
}